{% extends 'base.html.twig' %}

{% block stylesheets %}

    <style>
        .customdesign{
            margin-left: 100px;
            height: 400px !important;
            width: 800px !important;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="panel-heading">Groupe de Travail</div>

    <style>    fieldset
        {
            border: 1px solid #ddd !important;
            margin: 0;
            xmin-width: 0;
            padding: 10px;
            position: relative;
            border-radius:4px;
            background-color:#f5f5f5;
            padding-left:10px!important;
        }

        legend
        {
            font-size:14px;
            font-weight:bold;
            margin-bottom: 0px;
            width: 35%;
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px 5px 5px 10px;
            background-color: #ffffff;
        }
    </style>


    <div class="container">
        <br/>
        <div class="panel panel-default">


            <div class="panel-body">

                <fieldset class="col-md-6">

                    <legend>Group Name :  {{ groupeTravail.nom|upper }}</legend>

                    <div class="panel panel-default">
                        <div class="panel-body">

                            <select id="selt">

                                {% for cls in users %}
                                    <option name="sel" id="sel" value="{{ cls.id }}">{{ cls.nom }}</option>

                                {% endfor %}
                            </select></td>

                            <td><form method="post" action="{{ path('affct', { 'idprojet': groupeTravail.idgroupe }) }}">
                                    <input type="hidden" id="data" name="data">
                                    <button type="submit">
                                        Affecter
                                    </button>
                                </form>

                        </div>
                    </div>


                </fieldset>

                <div class="clearfix">

                </div>


            </div>
        </div>
    </div>{% block javascripts %}
    <script src="{{ asset('assets/vendor/jquery/jquery.js') }}" type="text/javascript"></script>
    <script>

        $(document).ready( function () {
            let u = $("#sel").val();

            $('input[name=data]').val(u);
            $("#selt").change(function () {
                var selectedCountry = $(this).children("option:selected").val();
                console.log(selectedCountry);
                $('input[name=data]').val(selectedCountry);
            });

        });


    </script>{% endblock %}

{% endblock %}
