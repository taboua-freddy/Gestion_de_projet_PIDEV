{% extends 'base.html.twig' %}
{% block pageName %}Activités/Affichage des Réclamations {% endblock %}
{% block title %}Gestion des Réclamations{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/vendor/bootstrap-fileupload/bootstrap-fileupload.min.css') }}" rel="stylesheet" />
{% endblock %}



{% block body %}
    <table class="table">
        <th>type</th>
        <th>description</th>
        <th>date</th>
        <th>reponse</th>
        <th>Supprimer</th>
        <th>Rate</th>

    {% for r in recs %}
        <tr>
            <td>{{ r.typeRec }}</td>
            <td>{{ r.description }}</td>
            <td>{{ r.dateRec }}</td>
            <td>{{ r.reponse }}</td>

            <td><a href="{{ path('supprimerRec',{'idrec':r.idRec}) }}">supprimer</a></td>
            <td><a href="{{ path('likeRec',{'idrec':r.idRec} )}}"><input type="image" src="{{ asset('likeOn.png') }}" alt="Submit" width="38" height="38"></a>
                {{ r.like }}

                <br>
                <a href="{{ path('dislikeRec',{'idrec':r.idRec} )}}"><input type="image" src="{{ asset('dison.png') }}" alt="Submit" width="33" height="33"></a>
                {{ r.dislike }}
            </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}