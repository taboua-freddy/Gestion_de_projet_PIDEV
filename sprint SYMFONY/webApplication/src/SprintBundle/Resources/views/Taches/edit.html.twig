{% extends 'base.html.twig' %}
{% block pageName %} Modification tache{% endblock %}
{% block body %}
    <style>
        fieldset {
            margin-bottom: 0px !important;
        }
    </style>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-8">
        </div>
        <div class="col-md-3 text-right">
            <a class="btn-lg btn-primary" href="{{ path('taches_index') }}">Back to the list</a>
            <input type="submit" class="btn-lg btn-success" value="Confirmer"/>
        </div>
    </div>

    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.nom) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.etat) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.priorite) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            {{ form_row(form.datedebut) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.datefin) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.userstory) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.user) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.etat) }}
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}